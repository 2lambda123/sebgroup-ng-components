{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/app",
        "paths": {
            "@pkg": ["package.json"],
            "@configs": ["projects/docs/src/configs.ts"],
            "@common/*": ["projects/docs/src/common/*"],
            "@pages/*": ["projects/docs/src/pages/*"],
            "@styles/*": ["projects/docs/src/styles/*"],
